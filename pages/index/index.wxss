page {
  background: #f9f9f9;
}

.search-wrapper {
  padding: 24rpx;
}

.search-btn {
  display: block;
  line-height: 60rpx;
  height: 60rpx;
  width: 100%;
  box-sizing: border-box;
  border: 2rpx solid #eee;
  border-radius: 5px;
  text-align: center;
  color: #ccc;
}

.tabs-wrapper {
  padding: 0 24rpx;
  position: relative;
  z-index: 2;
}

.tabs-header {
  display: flex;
  border-bottom: 1rpx solid #999;
}

.tabs-header .active {
  color: #333;
  position: relative;
}

.tabs-header .active:before {
  position: absolute;
  bottom: -3rpx;
  left: 0;
  content: '';
  width: 100%;
  height: 7rpx;
  background: #8abcd1;
}

.tabs-item {
  display: block;
  flex: 1;
  padding: 0 0 20rpx;
  text-align: center;
}
.tabs-content{
  padding: 24rpx;
}
.nodata-tips {
  display: block;
  padding: 120rpx 80rpx;
  line-height: 1.5;
}

.edit-wrapper{
  position: fixed;
  bottom: 50rpx;
  right: 60rpx;
  z-index: 4;
  line-height: 80rpx;
  height: 80rpx;
  width: 80rpx;
  text-align: center;
  border-radius: 50%;
  background: #53add3;
  color: #fff;
}
.edit-wrapper .icon-edit{
  font-size: 42rpx;
}