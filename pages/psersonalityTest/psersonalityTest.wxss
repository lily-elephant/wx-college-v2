/* pages/basetest/basetest.wxss */
.container{
  padding: 0 80rpx 0 32rpx;
}
.question{
  display: block;
  padding: 30rpx 0 0;
}
.radio-group{
  padding-left: 30rpx;
}
.radio-label{
  position: relative;
  display: block;
  padding: 30rpx 0;
  line-height: 42rpx;
  font-size: 30rpx;
  border-bottom: 1rpx solid #d9d9d9;
}
.radio-label .wx-radio-input{
  display: block;
  width: 50rpx;
  height: 50rpx;
  box-sizing: border-box;
  opacity: 0;
}
.radio-label .wx-radio-input-checked{
  background: #8abcd1!important;
  border-color: #8abcd1!important;
  opacity: 1;
}
.radio-btn{
  position: absolute;
  right: 0;
  bottom: 26rpx;
}
.btn-wrapper{
  width: 100%;
  margin: 60rpx 0;
}