/* component/train/index.wxss */
.container{
  position: relative;
  padding: 20rpx;
  border-bottom: 4rpx solid #eee;
}
.train-tip{
  position: absolute;
  top: 4rpx;
  left: 4rpx;
  z-index: 4;
  padding: 4rpx;
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  color: #fffefe;
  background: #8abcd1;
}

.train-tip text{
  display: block;
  line-height: 50rpx;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  border: 1rpx solid rgba(255,255,255,0.7);
  text-align: center;
  font-size: 20rpx;
}
.train-wrapper{
  display: flex;
}
.train-img{
  flex: 0 0 252rpx;
  width: 252rpx;
  height: 156rpx;
}
.train-content{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0 0 0 24rpx;
}
.train-title{
  line-height: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.train-count{
  font-size: 24rpx;
  color: #666;
}
.train-price{
  color: #db3c47;
}

